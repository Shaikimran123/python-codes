public class Main
{
	public static void main(String[] args) {
	
	    int m=5;
		
		for(int i=1;i<m;i++)
		{
		    System.out.println("*".repeat(i));
		}
		for(int i=m;i>0;i--)
		{
		     System.out.println("*".repeat(i)); 
		}
	
	    
	}
}

